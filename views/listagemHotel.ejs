<%- include("./partials/header") %>
<div class="container">    
    <a class="waves-effect green btn right" href="cadastrarHotel">Cadastrar Hotel</a>
    <h4 class="indigo-text text-darken-4 ">Listagem de todos os hoteis</h4>
    <%if (messages.length > 0) { %>
      <div class="materialert success">
          <div class="material-icons">check</div>
          <%= messages %>
      </div>
    <% } %>
    <div id="todos" class="col s12">       
        <div class="row">
            <% for(let i=0; i < hoteis.length; i++){ %>
            <div class="col s12 m4 l4">
              <div class="card">
                <div class="card-image">
                  <img src="/data/uploads/<%= hoteis[i].hotel_imagem %>">                 
                </div>                          
               
                <div class="card-content">                    
                  <span class="card-title"><%= hoteis[i].hotel_nome %></span>
                  <p><%= hoteis[i].hotel_descricao %></p>                
                  
                  <blockquote class="white">
                      <span>Pre√ßo por quarto</span>
                    <p class="black-text">R$ <%= hoteis[i].hotel_preco %></p> 
                    
                </blockquote> 
                </div>
                <div class="card-action">
                    <a class="red-text" href="/hotel/excluir/<%= hoteis[i].id %>">Excluir</a>
                    <a class="red-text" href="/hotel/alterar/<%= hoteis[i].id %>">Editar</a> 
                    <a class="red-text" href="/hotel/detalheHotel/<%= hoteis[i].id %>">Comprar</a>                                          
                </div> 
              </div>
            </div>
            <% } %>
        </div>
    </div>
</div>
<%- include("./partials/footer") %>