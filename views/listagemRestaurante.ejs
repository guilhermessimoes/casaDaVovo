<%- include("./partials/header") %>
<div class="container">
    <% if (session.usuario) { %>    
      <a class="waves-effect blue darken-3 btn right" href="cadastrarRestaurante">Cadastrar Restaurante</a>
    <% } %>
    <h4 class="blue-text text-darken-3">Listagem de todos os restaurantes</h4>
    <%if (messages.length > 0) { %>
      <div class="materialert success">
          <div class="material-icons">check</div>
          <%= messages %>
      </div>
    <% } %>
    <div id="todos" class="col s12">       
        <div class="row">
            <% for(let i=0; i < restaurantes.length; i++){ %>
            <div class="col s12 m4 l4">
              <div class="card large">
                <div class="card-image">
                  <img src="/data/uploads/<%= restaurantes[i].restaurante_imagem %>">                 
                  <span class="card-title"><strong><%= restaurantes[i].restaurante_nome %></strong></span>
                </div>
                <blockquote class="white">                      
                  <p>Restaurante localizado em <%= restaurantes[i].restaurante_cidade%> , <%= restaurantes[i].restaurante_estado%>.</p>
                </blockquote> 
                <div class="card-content">
                  <span><strong>Descrição</strong></span>                 
                  <p><%= restaurantes[i].restaurante_descricao %></p>                  
                </div>
                <div class="card-action">
                  <% if (session.usuario) { %>
                    <a class="red-text" href="/restaurante/excluir/<%= restaurantes[i].id %>">Excluir</a>
                    <a class="red-text" href="/restaurante/alterar/<%= restaurantes[i].id %>">Editar</a> 
                  <% } %>
                    <a class="red-text" href="/restaurante/detalheRestaurante/<%= restaurantes[i].id %>">Ver mais</a>                                        
                </div> 
              </div>
            </div> 
           <% } %>         
        </div>
    </div>
</div>
<%- include("./partials/footer") %>