<%- include("./partials/header") %>
<div class="container">    
    <a class="waves-effect green btn right" href="cadastrarTranslado">Cadastrar Translado</a>
    <h4 class="indigo-text text-darken-4 ">Listagem de todos os translados</h4>
    <%if (messages.length > 0) { %>
      <div class="materialert success">
          <div class="material-icons">check</div>
          <%= messages %>
      </div>
    <% } %>
    <div id="todos" class="col s12">       
        <div class="row">
            <% for(let i=0; i < translados.length; i++){ %>
            <div class="col s12 m4 l4">
              <div class="card">
                <div class="card-image">
                  <img src="/data/uploads/<%= translados[i].imagem %>">                 
                </div>                          
               
                <div class="card-content">                    
                  <span class="card-title"><strong><%= translados[i].titulo %></strong></span>                  
                  <p><%= translados[i].descricao %></p>
                  <blockquote class="white">
                      <span>Pre√ßo por pessoa *</span>
                    <s class="black-text">R$ <%= translados[i].preco_original %></s> 
                    <span class="precoPromocional red-text">R$ <%= translados[i].preco_promocional %> </span>
                </blockquote> 
                </div>
                <div class="card-action">
                    <a class="red-text" href="/translado/excluir/<%= translados[i].id %>">Excluir</a>
                    <a class="red-text" href="/translado/alterar/<%= translados[i].id %>">Editar</a> 
                    <!--<a class="red-text" href="/translado/detalheTranslado/<%= translados[i].id %>">Comprar</a> -->                                          
                </div> 
              </div>
            </div>
            <% } %>
        </div>
    </div>
</div>
<%- include("./partials/footer") %>