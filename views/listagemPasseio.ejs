<%- include("./partials/header") %>
<div class="container">    
    <a class="waves-effect green btn right" href="cadastrarPasseio">Cadastrar Passeio</a>
    <h4 class="indigo-text text-darken-4 ">Listagem de todos os passeios</h4>
    <%if (messages.length > 0) { %>
      <div class="materialert success">
          <div class="material-icons">check</div>
          <%= messages %>
      </div>
    <% } %>
    <div id="todos" class="col s12">       
        <div class="row">
            <% for(let i=0; i < passeios.length; i++){ %>
            <div class="col s12 m4 l4">
              <div class="card">
                <div class="card-image">
                  <img src="/data/uploads/<%= passeios[i].passeio_imagem %>">                 
                </div>                          
               
                <div class="card-content">                    
                  <span class="card-title"><%= passeios[i].passeio_titulo %></span>                  
                  <p><%= passeios[i].passeio_descricao %></p>
                  <blockquote class="white">
                      <span>Pre√ßo por pessoa *</span>
                    <s class="black-text">R$ <%= passeios[i].passeio_valor %></s> 
                    <span class="precoPromocional red-text">R$ <%= passeios[i].passeio_preco_promocional %> </span>
                </blockquote> 
                </div>
                <div class="card-action">
                    <a class="red-text" href="/passeio/excluir/<%= passeios[i].id %>">Excluir</a>
                    <a class="red-text" href="/passeio/alterar/<%= passeios[i].id %>">Editar</a> 
                    <a class="red-text" href="/passeio/detalhePasseio/<%= passeios[i].id %>">Comprar</a>                                          
                </div> 
              </div>
            </div>
            <% } %>
        </div>
    </div>
</div>
<%- include("./partials/footer") %>